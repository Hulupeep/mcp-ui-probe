{
  "name": "mcp-ui-probe",
  "version": "0.1.0",
  "description": "MCP server for UI testing with headless drivers and intelligent UI recognition",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "postinstall": "npx playwright install",
    "setup": "npm install && npm run build && npx playwright install",
    "test": "jest",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "monitoring": "tsx src/monitoring/server.ts",
    "start:monitoring": "node dist/monitoring/server.js",
    "setup-claude": "echo 'Setup script not yet implemented - please configure manually'",
    "setup:browsers": "npx playwright install",
    "setup:deps": "echo 'Run: sudo apt-get install libgstreamer-plugins-bad1.0-0 libavif16'"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "latest",
    "playwright": "^1.49.0",
    "zod": "^3.24.1",
    "winston": "^3.17.0",
    "uuid": "^11.0.5",
    "dotenv": "^16.4.7",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "socket.io": "^4.7.5",
    "prom-client": "^15.1.0",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@types/node": "^22.10.7",
    "@types/uuid": "^10.0.0",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "typescript": "^5.7.3",
    "tsx": "^4.19.2",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.14",
    "ts-jest": "^29.2.6"
  },
  "keywords": [
    "mcp",
    "ui-testing",
    "automation",
    "playwright",
    "webdriver",
    "appium"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Hulupeep/mcp-ui-probe.git"
  },
  "author": "",
  "license": "MIT"
}